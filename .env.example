# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/vide_gen
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/vide_gen

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Storage Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET=vide-gen-bucket

# Local MinIO (for development)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=vide-gen-local

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Provider API Keys (add when available)
VEO3_API_KEY=your_veo3_api_key
SORA2_API_KEY=your_sora2_api_key
KLING_API_KEY=your_kling_api_key

# Provider URLs
VEO3_API_URL=https://api.veo3.com
SORA2_API_URL=https://api.openai.com/v1
KLING_API_URL=https://api.kling.com

# Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Content Moderation
AWS_REKOGNITION_REGION=us-east-1
MODERATION_CONFIDENCE_THRESHOLD=0.85

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Rate Limiting (requests per minute)
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_PRO_TIER=100
RATE_LIMIT_ENTERPRISE_TIER=1000